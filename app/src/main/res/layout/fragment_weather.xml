<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="weatherViewmodel"
            type="com.balu.komalexclusivenews.viewmodel.weather.WeatherViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.weather.WeatherFragment">


    <EditText
        app:textChangedListener="@{weatherViewmodel.locationTextWatcher}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.location.name}" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.location.region}" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.location.country}"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.current.observationTime}"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.current.temperature}"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.current.humidity}"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@{weatherViewmodel.weather.current.weatherDescriptions[0]}" />
    </LinearLayout>

</layout>