<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="@dimen/cardview_compat_inset_shadow"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E7FFFD"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"></TextView>
        <TextView
            android:id="@+id/tv_match_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="Type"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_team_ome"
            android:layout_width="43dp"
            android:src="@drawable/flag_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_height="43dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_team_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_team_ome"
            android:text="Team One"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="#070707"
            android:layout_marginTop="5dp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_team_two"
            android:layout_width="43dp"
            android:src="@drawable/flag_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_height="43dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_team_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_team_two"
            android:text="Team Two"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="#070707"
            android:layout_marginTop="5dp">
        </TextView>
    </RelativeLayout>

<TextView
    android:id="@+id/tv_match_result"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:text="Match drawn"
    android:textColor="#2471AE"
    android:layout_height="wrap_content">
</TextView>

</LinearLayout>
</androidx.cardview.widget.CardView>
