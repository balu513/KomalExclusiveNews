<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="6dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:padding="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_location_covidWorld"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:text="Global"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_confirmed_covidWorld"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:text="Confirmed"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_total_confirmed_covidWorld"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_new_confirmed_covidWorld"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTintMode="src_in"
                android:drawableTint="@android:color/holo_red_dark"
                android:layout_marginTop="15dp"
                android:drawableStart="@android:drawable/arrow_up_float"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_recovered_covidWorld"
            android:textColor="@android:color/holo_green_dark"
            android:text="Recovered"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_total_recovered_covidWorld"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_new_recovered_covidWorld"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTintMode="src_in"
        android:layout_marginTop="15dp"
        android:drawableTint="@android:color/holo_green_dark"
        android:drawableStart="@android:drawable/arrow_up_float"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:text="Deceased"
            android:id="@+id/tv_deceased_covidWorld"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/tv_total_deceased_covidWorld"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_new_deceased_covidWorld"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTintMode="src_in"
        android:drawableTint="@android:color/black"
        android:layout_marginTop="15dp"
        android:drawableStart="@android:drawable/arrow_up_float"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>